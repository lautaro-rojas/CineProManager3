@model WebApplication1.DTOs.MovieCreationDto

@{
    ViewData["Title"] = "Create Movie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create new movie</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Muestra resumen de errores generales -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter the title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Genre" class="control-label"></label>
                            <input asp-for="Genre" class="form-control" placeholder="Science fiction" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Duration" class="control-label"></label>
                            <input asp-for="Duration" class="form-control" placeholder="In minutes" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="In a world far, far away..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Poster" class="control-label">Poster Image</label>
                            <input type="file" id="posterFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="Poster" class="text-danger"></span>

                            <!-- Input oculto para almacenar el base64 -->
                            <input type="hidden" asp-for="Poster" id="posterBase64" />

                            <!-- Previsualización de la imagen -->
                            <div id="imagePreview" class="mt-3 text-center" style="display: none;">
                                <img id="previewImage" src="" alt="Preview" class="img-fluid img-thumbnail" style="max-height: 300px;" />
                                <button type="button" id="removeImage" class="btn btn-sm btn-danger mt-2">Remove image</button>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to list</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Importante: Esto habilita la validación en el lado del cliente (JavaScript) -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const posterFile = document.getElementById('posterFile');
            const posterBase64 = document.getElementById('posterBase64');
            const imagePreview = document.getElementById('imagePreview');
            const previewImage = document.getElementById('previewImage');
            const removeImage = document.getElementById('removeImage');

            // Manejar la selección de archivo
            posterFile.addEventListener('change', function(e) {
                const file = e.target.files[0];

                if (file) {
                    // Validar que sea una imagen
                    if (!file.type.startsWith('image/')) {
                        alert('Please select a valid image file.');
                        posterFile.value = '';
                        return;
                    }

                    // Validar tamaño del archivo (máximo 5MB)
                    const maxSize = 5 * 1024 * 1024; // 5MB en bytes
                    if (file.size > maxSize) {
                        alert('The image is too large. Maximum size: 5MB');
                        posterFile.value = '';
                        return;
                    }

                    // Leer el archivo y convertirlo a base64
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        const base64String = event.target.result;

                        // Guardar el base64 en el input oculto
                        posterBase64.value = base64String;

                        // Mostrar la previsualización
                        previewImage.src = base64String;
                        imagePreview.style.display = 'block';
                    };

                    reader.onerror = function() {
                        alert('Error reading the file. Please try again.');
                    };

                    reader.readAsDataURL(file);
                }
            });

            // Manejar la eliminación de la imagen
            removeImage.addEventListener('click', function() {
                posterFile.value = '';
                posterBase64.value = '';
                previewImage.src = '';
                imagePreview.style.display = 'none';
            });
        });
    </script>
}